extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug


block main
  if(role.permissions.includes("products-view"))
    +alert-success(5000)
    +alert-error(5000)
    h1 Product List 

    .card.mb-3 
      .card-header Filter and Search
      .card-body 
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6 
            +search(keyword)

    .card.mb-3
      .card-header Sort
      .card-body
        .row 
          .col-4 
            div(sort)
              select(
                class="form-control"
                name="sort"
                sort-select 
              )
                option(value="") None
                option(value="price-desc") Giá giảm dần
                option(value="price-asc") Giá tăng dần
                option(value="title-desc") Tiêu đề Z-A
                option(value="title-asc") Tiêu đề A-Z 

              button(
                class="btn btn-danger mt-2"
                sort-clear
              ) Clear

      .card.mb-3 
      .card-header Product List
        .card-body  
          .row 
            .col-8 
              +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
            .col-4 
              if(role.permissions.includes("products-create"))
                a(
                  href=`${prefixAdmin}/products/create`
                  class="btn btn-success"
                ) Create product

            table(class="table table-hover table-sm" checkbox-multi)
              thead
                tr
                  th
                    input(type="checkbox" name="checkall")
                  th STT
                  th Image
                  th Title
                  th Price
                  th Status
                  th Create By
                  th Action

              tbody
                each item, index in products
                  tr
                    td
                      input(
                        type="checkbox"
                        name="id"
                        value=item.id
                      )
                    td #{pagination.limitItems*(pagination.currentPage - 1) + (index+1)}
                    td  
                      img(
                        src=item.thumbnail
                        alt=item.title
                        width="100px"
                        height="auto"
                      )

                    td #{item.title}
                    td #{item.price}$ 
                    td
                      if(role.permissions.includes("products-edit"))
                        if(item.status == "Inactive")
                          a(
                            href="javascript:" 
                            class="badge badge-danger"
                            button-change-status
                            data-status=item.status
                            data-id=item.id
                          ) #{item.status}
                        else
                          a(
                            href="javascript:"
                            class="badge badge-success"
                            button-change-status
                            data-status=item.status
                            data-id=item.id
                          ) #{item.status}
                    td 
                      p #{item.accountFullName} 
                      p 
                        +formatDateTime(item.createdBy.createdAt) 
                    td
                      a(
                        href=`${prefixAdmin}/products/detail/${item.id}`
                        class="btn btn-secondary btn-sm"
                      ) Detail
                      if(role.permissions.includes("products-edit"))
                        a(
                          href=`${prefixAdmin}/products/edit/${item.id}`
                          class="btn btn-warning btn-sm"
                        ) Edit
                      if(role.permissions.includes("products-delete"))
                        button(
                          class="btn btn-danger btn-sm"
                          button-delete
                          data-id=item.id
                        ) Delete

    +pagination(pagination)

    form(
      action="" 
      method="POST"
      id="form-change-status"
      data-path=`${prefixAdmin}/products/change-status`
    )

    form(
      action="" 
      method="POST"
      id="form-delete"
      data-path=`${prefixAdmin}/products/delete`
    )

    script(src="/admin/js/product.js")