extends ../../layouts/default.pug

block main
  h1 Product List 

  .card.mb-3 
    .card-header Filter and Search
    .card-body 
      .row
        .col-6
          each item in filterStatus
            button(
              class=`btn btn-sm ml-1 btn-outline-success ${item.class}` 
              button-status=item.status
            ) #{item.name}
        .col-6 
          form(id="form-search")
            .input-group 
              input(
                type="text"
                placeholder="Search"
                name="keyword"
                class="form-control"
              )
              .input-group-append
                button(
                  type="submit" 
                  class="btn btn-success"
                ) Search


  .card.mb-3 
    .card-header Product List
      .card-body  
        table(class="table table-hover table-sm" checkbox-multi)
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              th Giá
              th Trạng thái
              th Hành động

          tbody
            each item, index in products
              tr
                td #{index+1}
                td  
                  img(
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="auto"
                  )

                td #{item.title}
                td #{item.price}$ 
                td
                  if(item.status == "Inactive")
                    a(href="" class="badge badge-danger") #{item.status}
                  else
                    a(href="" class="badge badge-success") #{item.status}
                td
                  button(class="btn btn-warning btn-sm") Edit
                  button(class="btn btn-danger btn-sm") Delete
