include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-3 
        .inner-logo 
        .header.LOGO UniMart

      .col-5  
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            )   Search 
      .col-4  
        .inner-menu 
          ul 
            li 
              a(href="/") Home
            li(class="sub-menu")
              - const pathProduct ="/products";
              a(href=pathProduct) Products
                +sub-menu(layoutProductsCategory, pathProduct)
            li 
              a(href="/cart") Cart (#{miniCart ? miniCart.totalQuantity : 0})
            if(user)
              li 
                a(href="/chat") Chat
              li 
                a(href="/user/info") #{user.fullName}
              li
                a(href="/user/logout") Log Out
            else
              li
                a(href="/user/login") Sign In
              li
                a(href="/user/register") Sign Up

